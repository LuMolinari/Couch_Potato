<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/myAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_account"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10123119" />


    <Button
        android:id="@+id/account_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="45dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:drawableTint="@color/whiteText"
        android:ems="7"
        android:gravity="center"
        android:text="@string/account_settings"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/favorites_button"
        app:layout_constraintTop_toBottomOf="@+id/favorites_button" />

    <Button
        android:id="@+id/favorites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_baseline_favorite_24"
        android:drawableLeft="@drawable/ic_baseline_favorite_24"
        android:drawableTint="@color/whiteText"
        android:ems="7"
        android:gravity="center"
        android:text="@string/favorites"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/recommend_button"
        app:layout_constraintTop_toBottomOf="@+id/recommend_button" />

    <Button
        android:id="@+id/recommend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_baseline_share_24"
        android:drawableLeft="@drawable/ic_baseline_share_24"
        android:drawableTint="@color/whiteText"
        android:ems="7"
        android:gravity="center"
        android:text="@string/recommend"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myAccountTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>