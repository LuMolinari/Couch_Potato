<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_card_view"
    app:layout_constraintWidth_percent="0.5">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/share_popup_close_button"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/close_window_512"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_window_512" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="105dp"
        android:layout_height="27dp"
        android:text="Share link:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/share_popup_link_text_view"
        android:layout_width="206dp"
        android:layout_height="80dp"
        android:text="TextView"
        android:autoLink="web"
        android:linksClickable="true"
        app:layout_constraintEnd_toStartOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/share_popup_close_button" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/share_popup_copy_button"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/copy_512__1_"
        app:layout_constraintBottom_toBottomOf="@+id/share_popup_link_text_view"
        app:layout_constraintEnd_toEndOf="@+id/share_popup_link_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>