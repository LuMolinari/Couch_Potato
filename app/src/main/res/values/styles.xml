<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">#E5E5E5</item>
        <item name="android:editTextColor">@color/textFieldBackground</item>
        <item name="android:actionMenuTextColor">@color/colorPrimaryDark</item>

    </style>

    <style name="Button.Colored" parent="ThemeOverlay.AppCompat" >
     <item name="colorAccent">#87C6AF</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>